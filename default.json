{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends":[
        "config:base",
        "github>whitesource/merge-confidence:beta",
        "group:recommended"
    ],
    "recreateWhen": "never",
    "enabledManagers": [
        "ansible-galaxy",
        "circleci",
        "docker-compose",
        "dockerfile",
        "gomod",
        "homebrew",
        "nodenv",
        "npm",
        "nvm",
        "pre-commit",
        "regex",
        "terraform-version",
        "terraform",
        "pip_requirements",
        "gradle",
        "gradle-wrapper",
        "maven",
        "maven-wrapper",
        "git-submodules",
        "poetry",
        "pep621"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "dependencyDashboard": true,
    "pre-commit": {
        "enabled": true
    },
    "assignees": [
        "timo-reymann"
    ],
    "reviewers": [
        "timo-reymann"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "pre-commit"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest",
                "lockFileMaintenance",
                "rollback",
                "bump"
            ],
            "groupName": "pre-commit hooks",
            "commitMessageSuffix": "[skip ci]",
            "automerge": true,
            "ignoreTests": true
        }
    ]
}
